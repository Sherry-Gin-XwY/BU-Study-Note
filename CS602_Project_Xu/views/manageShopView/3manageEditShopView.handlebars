<div class="table-responsive">
    <form method="post" action="/shops/manageShopEdit">
        <table class="table table-condensed">
            <tbody>
                <tr>
                    <th>Shop Name: </th>
                    <td><input type="text" name="shopName" required="required" size="40" value="{{data.shopName}}" /></td>
                </tr>

                <tr>
                    <th>Amount: </th>
                    <td><input type="number" name="amount" required="required" size="40" value="{{data.amount}}" /></td>
                </tr>

                <input type="hidden" name="id" value="{{data.id}}" />
            </tbody>

            <tfooter>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save" class="btn btn-success"/>
                        <input type="button" value="Cancel" class="btn btn-danger" class="cancel" onclick="cancelAddShop()">
                    </td>
                </tr>
            </tfooter>
        </table>
    </form>
</div>