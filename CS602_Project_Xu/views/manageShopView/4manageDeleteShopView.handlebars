<div class="table-responsive">
    <form method="post" action="/shops/manageShopDelete">
        <table class="table-responsive">
            <tbody>
                <tr>
                    <th>Shop Name: </th>
                    <td>{{data.shopName}}</td>
                </tr>

                <tr>
                    <th>shop Amount:</th>
                    <td>{{data.amount}}</td>
                </tr>
                <input type="hidden" name="id" value="{{data.id}}">
            </tbody>
            <tfooter>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="OK" class="btn btn-primary">
