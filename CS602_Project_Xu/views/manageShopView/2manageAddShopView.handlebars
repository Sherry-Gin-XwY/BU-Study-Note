<div class="table-responsive">
    <form method="post" action="/shops/manageShopAdd">
        <table class="table table-condensed">
            <tbody>

                <tr>
                    <th>Shop Name: </th>
                    <td><input type="text" name="sName" required placeholder="Please enter the shop name"></td>
                </tr>

                <tr>
                    <th>Amount: </th>
                    <td><input type="number" name="sAmount" required placeholder="Please enter the amount"></td>
                </tr>
            </tbody>

            <tfooter>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Save"
                            class="btn btn-success">
                        <input type="button" value="Cancel" class="btn btn-danger" onclick="cancelAddShop()">
                    </td>
                </tr>
            </tfooter>

        </table>
    </form>
</div>